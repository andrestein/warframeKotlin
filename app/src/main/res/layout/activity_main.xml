<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/background">

    <TableLayout
            android:layout_width="395dp"
            android:layout_height="714dp" tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="wrap_content" android:layout_height="114dp" android:layout_margin="50dp">
            <EditText
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    tools:layout_editor_absoluteY="85dp" tools:layout_editor_absoluteX="99dp"
                    android:id="@+id/buscarArma"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="Buscar"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="199dp"
                    tools:layout_editor_absoluteX="161dp" android:id="@+id/btnTest"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="514dp" android:id="@+id/infoArma"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>
</android.support.constraint.ConstraintLayout>